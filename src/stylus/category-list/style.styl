
.list-categories
  font-size 0
  list-style none
  margin 0 auto
  max-width 680px

.list-categories__list-item
  display inline-block
  font-size 16px
  padding 8px
  width 100%
  @media (min-width: 360px)
    width 50%
  @media (min-width: 540px)
    width 33.3%

.list-categories__item
  background-color bestBeautyPink
  color #fff
  display block
  letter-spacing 3px
  font-size 13px
  font-weight 800
  padding 16px 10px
  text-decoration none
  text-transform uppercase
  transition background-color 150ms ease-out,
             color 150ms ease-out
  box-shadow inset 0 0 0 0 #fff
  &:hover,
  &:focus
    background-color #fff
    color bestBeautyPink
    box-shadow inset 0 0 0 3px bestBeautyPink
  @media ipadsAndUp
    font-size 18px
    font-weight 600
    padding 20px 16px

.list-categories--reverse .list-categories__item
  background-color #fff
  box-shadow inset 0 0 0 0 #fff
  color bestBeautyPink
  transition background-color 150ms ease-out,
             color 150ms ease-out,
             box-shadow 150ms ease-out
  &:hover,
  &:focus
    background-color transparent
    color #fff
    box-shadow inset 0 0 0 2px #fff

.list-categories--animate .list-categories__list-item
  opacity 0
  transform translateY(30px)
  transition opacity 300ms ease-out,
             transform 300ms ease-out
  .fr-offcanvas--is-active &
    transform translateY(0)
    opacity 1
for $i in (1..15)
  .fr-offcanvas--is-active
    .list-categories--animate
      .list-categories__list-item:nth-child({$i})
        transition-delay 90ms * $i
