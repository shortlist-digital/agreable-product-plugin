minfont = 30px
maxfont = 128px
minscreen = 400px
maxscreen = 1200px

.product_collection-header
  box-shadow inset 0 0 0 50vw rgba(#000, 0.35)
  background-size cover
  height 300px
  margin-bottom 60px
  width 100%
  @media smallTabletsAndUp
    min-height 400px
    height 40vh
  @media ipadsAndUp
    width 100vw

.product_collection-header-category
	font-size calc(30px + (128 - 30) * (100vw - 400px) / (1200 - 400)) // variables aren't working here, hard-coded for now
	font-weight 800
	color white
	letter-spacing 10px
	text-transform uppercase
	text-align center
	position relative
	top 50%
	transform translateY(-50%)
	@media (max-width: 399px)
		font-size 30px
	@media (min-width: 1200px)
		font-size 128px
