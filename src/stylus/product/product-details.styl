.product-info__media
  margin 0 auto 30px
  max-width 500px
  @media ipadsAndUp
    max-width 360px

.product-info__content
  margin 0 auto
  max-width 400px
  &::after
    content ''
    display table
    clear both

.product-info__cta
  background-color bestBeautyPink
  border-radius 25px
  box-shadow inset 0 0 0 0 bestBeautyPink
  color white
  display  inline-block
  font-size 18px
  font-weight 800
  letter-spacing 1.8
  margin-bottom 40px
  padding 15px 25px
  min-width 240px
  text-decoration none
  text-transform uppercase
  transition background-color 150ms ease-out,
             box-shadow 150ms ease-out,
             color 150ms ease-out
  @media (min-width: 500px)
    margin-bottom 80px
  &:hover,
  &:focus
    background-color #fff
    box-shadow inset 0 0 0 2px bestBeautyPink
    color bestBeautyPink
  @media (max-width: 400px)
    bottom 20px
    left 40px
    margin-bottom 0
    position fixed
    right 40px
    z-index 2
    transition background-color 150ms ease-out,
               box-shadow 150ms ease-out,
               color 150ms ease-out,
               opacity 200ms ease-out,
               visibility 200ms ease-out,
               transform 200ms ease-out
    .js &
      opacity 0
      transform translateY(70px)
      visibility hidden
    .js &.is-visible
      opacity 1
      transform translateY(0)
      visibility visible
