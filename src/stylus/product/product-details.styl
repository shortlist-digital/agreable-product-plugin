
.product-info-container
  padding-top 70px
  margin-bottom 50px
  @media ipadsAndUp
    font-size 0
    margin-left -32px

.product-info__col
  vertical-align middle
  width 100%
  @media ipadsAndUp
    display inline-block
    font-size 16px
    padding-left 32px
    width 50%

.product-info__col--centered
  text-align center

.product-info__title
  margin-bottom 10px

.product-info__brand
  color #4e4e4e
  font-size 14px
  font-weight 300
  margin-bottom 25px
  margin-top 0

.product-info-meta
  border-bottom 1px solid #dbdbdb
  border-top 1px solid #dbdbdb
  font-size 0
  margin-bottom 20px
  padding 14px 0
  text-align right

.product-info-meta__winner-label
  display inline-block
  font-size 16px
  font-weight 600
  padding-right 20px
  text-align left
  vertical-align middle
  width 50%

.product-info-meta__price
  display inline-block
  font-size 20px
  font-weight 600
  text-align right
  vertical-align middle
  width 100%
  .product-info-meta__winner-label + &
    width 50%

.product-info-meta__offer
  color #4e4e4e
  display inline-block
  font-size 12px
  margin-bottom 0
  margin-left auto
  margin-top 4px
  text-align right
  vertical-align middle
  width 70%

.product-info__description
  color #4e4e4e
  line-height 1.64
  margin-bottom 30px

.product-info__quote
  color #4e4e4e
  font-weight 600
  line-height 1.88

.product-info__author
  color bestBeautyPink
  font-weight 600
  font-size 12px
  line-height 1.88
  text-transform capitalize
  text-align right
  margin-top 10px

.product-info-rating
  margin-bottom 30px

.product-info-rating__badge
  background-color #e7126a
  color #fff
  display inline-block
  font-weight 600
  letter-spacing 4px
  margin-right 14px
  padding 10px 18px 8px
  text-transform uppercase
  vertical-align middle
  @media (min-width: 360px)
    padding-left 24px
    padding-right 24px
.product-info-rating__stars
  display inline-block
  vertical-align middle

