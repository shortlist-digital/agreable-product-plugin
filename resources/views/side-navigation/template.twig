<button class="side-nav-open js-fr-offcanvas-open" aria-controls="offcanvas-1">
	See all categories
</button>
<section class="side-nav-container js-fr-offcanvas" id="offcanvas-1">
	<button class="side-nav-close js-fr-offcanvas-close"></button>
	<h3 class="side-nav-container_title">{{product_collection_category.name}} Categories</h3>
	<ul>
		{% for sub_category in product_collection_category.sub_categories %}
			<li class="side-nav-container_item" id="sub_category.sub_category_name"><a href="#{{sub_category.sub_category_name}}" class="side-nav-container_link">{{sub_category.sub_category_name}}</a></li>
		{% endfor %}
	</ul>
</section>